<style>
.fa{ 
  color: white;
}

.fa-close{
  color: #A9B262;
}
</style>

<section id= "banner-login"> 

    <div class="container">

        <h2>Log In</h2>

        <p>CHECK OUT YOUR MAP.</p>
        <br>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form class="row">
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Your Email", class: "form-control" %>
                  </div>

                      <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password", class: "form-control" %>
                      </div>

                          <% if devise_mapping.rememberable? -%>
                          <div class="form-group">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                          </div>
                          <% end %>

                      <div class= "hvr-wobble-vertical">
                      <%= f.submit "LOG IN", class: "btn btn-primary" %>
                      </div>
                      <% end %>

              <%= render "users/shared/links" %>
          </form>
    </div>
  
</section>
